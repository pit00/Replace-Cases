        "sash.hoverBorder": "#778946",
        "statusBar.background": "#5a6735",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#778946",
        "statusBarItem.remoteBackground": "#5a6735",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#5a6735",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#5a673599",
        "titleBar.inactiveForeground": "#e7e7e799"
